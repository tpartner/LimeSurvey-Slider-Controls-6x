<!-- Multiple Numerical with slider -->
<!-- answer -->
<ul class='{{coreClass}} list-unstyled form-horizontal control-slider-list' role="group" aria-labelledby="ls-question-text-{{basename}}">
    {% block rows %}
        {% if aRows is empty %}
            {% include '/survey/questions/answer/multiplenumeric/empty.twig' %}
        {% else %}
            {% for aRow in aRows %}
                {% include rowTemplate with aRow only %}
            {% endfor %}
        {% endif %}
    {% endblock %}
    <!-- No dynamic sums available in this custom theme  -->
</ul>

