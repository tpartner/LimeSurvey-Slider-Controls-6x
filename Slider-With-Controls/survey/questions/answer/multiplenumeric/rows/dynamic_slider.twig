
{# /**
 * Multiple numeric : dynamic row (remaining + total)
 * @var $id
 * @var $sumRemainingEqn
 * @var $sumEqn
 * @var $sLabelWidth
 * @var $sInputContainerWidth
 * @var $prefix
 * @var $suffix
 */ #}

{% if sumRemainingEqn %}
    <li class="mb-3 ls-group-remaining ls-group-dynamic">
        <div class="col-12 col-md-{{ sInputContainerWidth }} offset-lg-{{ sLabelWidth }}">
            <div class="control-label">
                {{ gT('Remaining') }}:
            </div>
            {% if prefix %}
                <div class="prefix-text prefix"><!-- Suffix prefix are not shown inline, but only in the slider: completely different concept : set hidden -->
                    {{ processString(prefix) }}
                </div>
            {% endif %}
            <div id="remainingvalue_{{ id }}" class="form-control-static numeric dynamic-remaining" data-number="1"><!-- alternative class : form-control : display like an input:text -->
                {{ sumRemainingEqn }}
            </div>
            {% if suffix %}
                <div class="suffix-text suffix">
                   {{ processString(suffix) }}
                </div>
            {% endif %}
        </div>
    </li>
{% endif %}

{% if sumEqn %}
    <li class="mb-3 ls-group-total ls-group-dynamic">
       <div class="col-12 col-md-{{ sInputContainerWidth }} offset-lg-{{ sLabelWidth }}">
            <div class="control-label">
                {{gT('Total:')}}
            </div>
            <div id="totalvalue_{{ id }}" class="form-control-static numeric dynamic-total" data-number="1">
                {{ sumEqn }}
            </div>
        </div>
    </li>
{% endif %}
